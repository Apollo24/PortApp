<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"

    android:background="#C2A385"


    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:background="#996633"
        android:id="@+id/Spotify_Streamer"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:clickable="false"
        android:width="150dp"
        android:height="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/Scores_App"
        android:layout_below="@+id/Spotify_Streamer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="#996633"
        android:height="50dp"
        android:width="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/Library_App"
        android:layout_below="@+id/Scores_App"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="#996633"
        android:height="50dp"
        android:width="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/Build_It_Bigger"
        android:layout_below="@+id/Library_App"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="#996633"
        android:width="150dp"
        android:height="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/XYZ_Reader"
        android:layout_below="@+id/Build_It_Bigger"
        android:layout_alignLeft="@+id/Library_App"
        android:layout_alignStart="@+id/Library_App"
        android:layout_marginTop="20dp"
        android:background="#996633"
        android:width="150dp"
        android:height="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Own App: Capstone "
        android:id="@+id/Capstone"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/XYZ_Reader"
        android:layout_centerHorizontal="true"
        android:background="#ff7bacff"
        android:height="50dp"
        android:width="180dp"
        android:textColor="#ffff0a00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My Nanodegree Apps"
        android:id="@+id/title"
        android:background="#ffb7ccff"
        android:width="140dp"
        android:height="30dp"
        android:textColor="#ffff0900"
        android:textAlignment="gravity"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Capstone"
        android:layout_alignStart="@+id/Capstone"
        android:layout_alignRight="@+id/Capstone"
        android:layout_alignEnd="@+id/Capstone" />
</RelativeLayout>
